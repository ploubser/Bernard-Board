<%= javascript_include_tag :defaults %>
<script src="http://www.google.com/jsapi" type="text/javascript"></script>
<%= javascript_include_tag "jquery-1.4.2.min.js" %>
<%=javascript_include_tag "jquery-ui-1.8.4.custom.min.js" %>
<%=javascript_include_tag "bernard.js" %>
<%= stylesheet_link_tag "jquery-ui-1.8.4.custom.css" %>
<%= stylesheet_link_tag "bernard.css"%>
<%= javascript_tag "jQuery.noConflict();" %>

<div class class="ui-widget ui-widget-content screen" id="screen">
<div class="ui-widget-header"><center>BernardBoard</center></div>
    
    <div class="container ui-widget-content"  id="container">
        <% @canvas.each do |can|%>
            <div id="<%= can.name %>" style="border: 2px solid;height:<%=can.height%>px;width:<%= can.width%>px;position:absolute;left:<%= can.left%>px;top:<%= can.top%>px">
                <%= periodically_call_remote :url => {:action => :refresh, :id => can.name}, :frequency => 5%>
                <%= render :partial => "gauge", :locals=> {:can => can}%>
            </div>
        <% end %>
        <div class="ui-widget-header footer"><center>Pinetecltd - August 2010</center></div>
    </div>
</div>
